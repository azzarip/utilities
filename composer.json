{
    "name": "azzarip/utilities",
    "description": "Utilities for websites using Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Paride Azzari",
            "email": "paride21azzari@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0||^11.0",
        "laravel/fortify": "^1.21",
        "spatie/laravel-package-tools": "^1.16",
        "livewire/livewire": "^3.4"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "laravel/sanctum": "^4.0",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Azzarip\\Utilities\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Azzarip\\AdminPanel\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "Azzarip\\Utilities\\AzzaripServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
